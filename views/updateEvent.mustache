<!DOCTYPE html>
<html lang="en-US">
{{>header}}

<body>
<div class="container">
    <form method="POST" action="/Update-Event">
        <input type="hidden" id="week" name="week" value="{{week}}">
        <input type="hidden" id="taskID" name="taskID" value="{{taskID}}">
        <div class="form-group">
            <label>{{date}}</label>
        </div>
        <div class="form-group">
            <label for="Activity">Activity: </label>
            <input type="text" class="form-control" name="activity" id="activity" value="{{activity}}">
        </div>
        <div class="form-group">
            <label for="Number">Number: </label>
            <input type="number" class="form-control" name="reps" id="reps" value="{{reps}}">
            <label for="Unit">Unit:</label>
            <input type="text" class="form-control" name="unit" id="unit" value="{{unit}}">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-block btn-dark float-right">Update Event</button>
        </div>
    </form>
</div>
</body>
</html>